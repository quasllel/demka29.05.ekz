<Page x:Class="WpfDemo.Model1.AllReq"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfDemo.Model1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AllReq">

    <Grid Background="White">

        <DataGrid x:Name="ReqList" HorizontalAlignment="Center" Height="275" Margin="0,104,0,0" VerticalAlignment="Top" Width="780" d:ItemsSource="{Binding}"/>
        <Button Content="Выйти" Click="Button_Click" HorizontalAlignment="Left" Margin="20,75,0,0" VerticalAlignment="Top" Width="87"/>
        <Label Content="Список всех заявок" HorizontalAlignment="Center" Margin="0,58,0,0" VerticalAlignment="Top" FontSize="20"/>
    </Grid>
</Page>
